
@{
    ViewBag.Title = "Register";
    Layout = null;
}
    <head>
        <title>
            Create an Account | JZ Sports Zone
        </title>
    </head>
    <body style="background-image:url('https://motionarray.imgix.net/preview-279485-UenCPR1wxc-high_0008.jpg'); background-repeat:no-repeat; background-size:cover">
        <link href="~/themes/default/css/font-awesome.min.css" rel="stylesheet" />
        <link href="~/themes/default/login/style.css" rel="stylesheet" />
        <h2 style="color:white">Welcome to JZ Sports Zone</h2>
        <a style="font-size:24px; color:white; margin-top:-10px" href="/">⬅️ Go to Home </a>
        <div class="container" id="container">
            <div class="form-container sign-up-container">
                <form action="#">
                    <h1>Create Account</h1>
                    <div class="social-container">
                        <a href="#" class="social"><i class="fa fa-facebook-f"></i></a>
                        <a href="#" class="social"><i class="fa fa-linkedin"></i></a>
                        <a href="#" class="social"><i class="fa fa-google-plus"></i></a>
                    </div>
                    <span>Use your email for registration</span>
                    <input type="text" placeholder="Name" />
                    <input type="email" placeholder="Email" />
                    <input type="password" placeholder="Password" />
                    <button>Sign Up</button>
                </form>
            </div>
            <div class="overlay-container">
                <div class="overlay">
                    <div class="overlay-panel overlay-left">
                        <h1>Welcome Back!</h1>
                        <p>To keep connected with us please login with your personal info</p>
                        <button onclick="navigatetologin()" class="ghost" id="signIn">Sign In</button>
                    </div>
                </div>
            </div>
        </div>
        <footer>
            <p>
                Created with <i class="fa fa-heart"></i> by
                <a target="_blank" href="https://florin-pop.com">Florin Pop</a>
                - Read how I created this and how you can join the challenge
                <a target="_blank" href="https://www.florin-pop.com/blog/2019/03/double-slider-sign-in-up-form/">here</a>.
            </p>
        </footer>
        <script>
            function navigatetologin() {
                window.location.href = '/account/login';
            }
        </script>
    </body>