<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta content="Responsive admin theme build on top of Bootstrap 4" name="description" />
    <meta content="Ghulam Mujtaba" name="author" />
    <link rel="shortcut icon" href="~/themes/ud/images/favicon.ico">
    @Styles.Render("~/bundles/dashboard/css")
</head>
<body>
    @{
        List<users> _u = (List<users>)Session["Data"];
    }
    <!-- Begin page -->
    <div id="wrapper">

        <!-- Top Bar Start -->
        <div class="topbar">

            <!-- LOGO -->
            <div class="topbar-left">
                <a href="index.html" class="logo">
                    <img src="~/themes/ud/images/logo-light.png" class="logo-lg" alt="" height="22">
                    <img src="~/themes/ud/images/logo-sm.png" class="logo-sm" alt="" height="24">
                </a>
            </div>
            <nav class="navbar-custom">
                <ul class="navbar-right list-inline float-right mb-0">
                    <!-- full screen -->
                    <li class="dropdown notification-list list-inline-item d-none d-md-inline-block">
                        <a class="nav-link waves-effect" href="#" id="btn-fullscreen">
                            <i class="fas fa-expand noti-icon"></i>
                        </a>
                    </li>
                    <li class="dropdown notification-list list-inline-item">
                        <div class="dropdown notification-list nav-pro-img">
                            <a class="dropdown-toggle nav-link arrow-none waves-effect nav-user" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                                <strong>@_u[0].username.ToUpper() | @_u[0].usertype.ToUpper()</strong>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-animated profile-dropdown">
                                <!-- item-->
                                @if (_u[0].usertype == "Player")
                                {
                                    <a class="dropdown-item" href="/players/@_u[0].username"><i class="mdi mdi-account-circle"></i> My Profile <i style="font-size:12px" class="fa fa-external-link-alt"></i></a>
                                }
                                else if (_u[0].usertype == "Coach")
                                {
                                    <a class="dropdown-item" href="/coachs/@_u[0].username"><i class="mdi mdi-account-circle"></i> My Profile <i class="fa fa-external-link-alt"></i></a>
                                }
                                else if (_u[0].usertype == "Club")
                                {
                                    <a class="dropdown-item" href="/clubs/@_u[0].username"><i class="mdi mdi-account-circle"></i> My Profile <i class="fa fa-external-link-alt"></i></a>
                                }
                                else { }
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-danger" href="/account/logout"><i class="mdi mdi-power text-danger"></i> Logout</a>
                            </div>
                        </div>
                    </li>

                </ul>

                <ul class="list-inline menu-left mb-0">
                    <li class="float-left">
                        <button class="button-menu-mobile open-left waves-effect">
                            <i class="mdi mdi-menu"></i>
                        </button>
                    </li>
                </ul>

            </nav>

        </div>
        <!-- Top Bar End -->
        <!-- ========== Left Sidebar Start ========== -->
        <div class="left side-menu">
            <div class="slimscroll-menu" id="remove-scroll">

                <!--- Sidemenu -->
                <div id="sidebar-menu">
                    <!-- Left Menu Start -->
                    <ul class="metismenu" id="side-menu">
                        <li class="menu-title">Menu</li>
                        <li>
                            <a href="/account/me" class="waves-effect">
                                <i class="dripicons-meter"></i><span> Dashboard </span>
                            </a>
                        </li>
                        <li>
                            <a href="/players/@_u[0].username" target="_blank" class="waves-effect"><i class="dripicons-user"></i><span> My Profile </span> <i style="font-size:12px" class="fa fa-external-link-alt"></i></a>
                        </li>
                        @if (_u[0].usertype == "Player")
                        {
                        <li class="menu-title">Enrollments</li>
                        <li>
                            <a href="/player-activities/my-enrollments" class="waves-effect"><i class="dripicons-information"></i><span> My Enrollments </span></a>
                        </li>
                        <li>
                            <a href="/player-activities/enrollment-requests" class="waves-effect"><i class="dripicons-return"></i><span> Enrollment Requests </span></a>
                        </li>
                        <li>
                            <a href="/player-activities/create-enrollment-request" class="waves-effect"><i class="dripicons-document-new"></i><span> New Enrollment </span></a>
                        </li>
                        <li class="menu-title">Reviews</li>
                        <li>
                            <a href="/player-activities/reviews" class="waves-effect"><i class="dripicons-box"></i><span> Your Reviews </span></a>
                        </li>
                        }
                        <li class="menu-title">Payments</li>
                        <li>
                            <a href="/membership/dues" class="waves-effect"><i class="fa fa-dollar-sign"></i><span> Payment &amp; Dues  </span></a>
                        </li>
                        <li class="menu-title">Account</li>
                        <li>
                            <div class="dropdown-divider"></div>
                            <a class="waves-effect" href="/account/logout"><i class="mdi mdi-power text-danger"></i> Logout</a>
                        </li>
                    </ul>

                </div>
                <!-- Sidebar -->
                <div class="clearfix"></div>

            </div>
            <!-- Sidebar -left -->

        </div>
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="content-page">
            <!-- Start content -->
            @RenderBody()
            <!-- content -->

            <footer class="footer">
                © 2019 Zegva <span class="d-none d-sm-inline-block"> - Crafted with <i class="mdi mdi-heart text-danger"></i> by Themesdesign</span>.
            </footer>

        </div>
        <!-- ============================================================== -->
        <!-- End Right content here -->
        <!-- ============================================================== -->

    </div>
    <!-- END wrapper -->
    @Scripts.Render("~/bundles/dashboard/js")
    @RenderSection("scripts", required: false)
</body>

</html>
